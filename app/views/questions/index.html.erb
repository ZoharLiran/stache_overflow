<div class="container">
  <!-- Example row of columns -->
  <% for i in 0..@questions.length do %>
    <div class="row">
    <% for j in i..(i+2) do %>
      <% break if j >= @questions.length %>
      <div class="col-md-4">
        <h2><%= @questions[j].title %></h2>
        <%= link_to @questions[j].content, question_path(q) %>
        <p><a class="btn btn-default" href="#" role="button">View details &raquo;</a></p>
      </div>
    <% end %>
    <% i = j %>
    </div>
  <% end %>

  
  <hr>

  <%= link_to 'new question', new_question_path %>
  <footer>
    <p>&copy; Company 2014</p>
  </footer>
</div> <!-- /container -->




