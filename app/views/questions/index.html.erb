<div class="container">
  <!-- Example row of columns -->
  <% i = 0 %>
  <% while i < @questions.length do %>
    <div class="row">
    <% for j in i..(i+2) do %>
      <% break if j >= @questions.length %>
      <div class="col-md-4">
        <h2><%= link_to @questions[j].title, question_path(@questions[j]) %></h2>
        <%= @questions[j].content %>
        <br>
        <a data-id="<%= @questions[j].id %>" class="upvote-button" href="" role="button">
          <i class="fa fa-chevron-up"></i>
        </a> 
        <span class="v<%= @questions[j].id %>"><%= @questions[j].vote_count %></span> 
        <a data-id="<%= @questions[j].id %>" class="downvote-button" href="#" role="button">
          <i class="fa fa-chevron-down"></i>
        </a>
      </div>
    <% end %>
    <% i = j + 1 %>
    </div>
    <% break if i >= @questions.length %>
  <% end %>


  <hr>

  <%= link_to "Ask a question &raquo;".html_safe, new_question_path, class: "btn btn-primary btn-lg", role: "button" %>

</div> <!-- /container -->




