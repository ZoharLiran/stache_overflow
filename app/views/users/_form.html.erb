  <%= form_for @user, html: {class: 'ki-form stacked' } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
<br>
    <%= f.label :email %>
    <%= f.text_field :email %>
<br>
    <%= f.label :password %>
    <%= f.password_field :password %>
<br>
    <%= f.label :password_confirmation, 'Confirmation' %>
    <%= f.password_field :password_confirmation %>
<br>
    <%= f.submit 'Save', class: 'ki-button'%>
  <% end %>