  <%= form_tag "/login", method: "post", class: 'ki-form stacked' do %>
    <%= label_tag :email %>
    <br>
    <%= text_field_tag :email %>
    <br>
    <%= label_tag :password %>
    <br>
    <%= password_field_tag :password %>
    <br>
    <%= submit_tag 'Sign In', class: 'ki-button', id: 'signin'%>
  <% end %>