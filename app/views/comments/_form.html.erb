  <%= form_for @comment, html: {class: 'ki-form' } do |f| %>
      <%= f.label :content, 'Comment:' %>
      <%= f.text_field :content %>
      <%= f.hidden_field :question_id, value: params[:question_id] %>
      <%= f.hidden_field :answer_id, value: params[:answer_id] %>
      <%= f.submit 'Save', class: 'ki-button'%>
  <% end %>
